@import "../shared/utils/type_sizing";
@import "../shared/utils/type_stacks";
@import "../shared/utils/clearfix";
@import "organisation_brands";

#content {
  @include clearfix;

  .document_page {

    section.page_header {
      h1.page_title {
        line-height: 1.125em;
      }
    }

    .notice {
      background: rgb(255,224,135);
      padding: 0.5em;
      margin-bottom: 1.5em;

      p {
        @include type-13;
        margin-bottom: 0;
      }

      ul {
        margin-bottom: 0;

        li {
           @include type-12;
           margin-bottom: 0;
        }
      }
    }

    &.speech {
      .contextual_info {
        .img {
          img {
            width: 50%;
          }
        }
      }
    }

    .meta {
      position: relative;
      margin-bottom: 1.5em;

      .metadata {
        @include type-14;
        margin-right: 0.5em;
      }
    }

    .explanation {
      @include type-14;
      font-style: italic;
    }

    .link-to-change-notes {
      @include type-14;
    }

    .document {
      padding: 0;
      background-color: #fff;

      a {
        text-decoration: underline;
      }

      .body {
        h2 {
          @include type-21;
          margin-bottom: 0.28575em;
        }

        h3 {
          @include type-18;
          margin-bottom: 0;
        }

        p {
          @include type-18;
          line-height: 1.5em;
          max-width: 50em;
        }

      }

      section {
        h1 {
          @include type-21;
          @include helvetica;
          margin-bottom: 0.28575em;
        }

        ol {
          li {
            margin-bottom: 0.5em;
            span.published_at {
              display: block;
            }
          }
        }
      }
    }

    section.contextual_info {

      h1 {
        @include type-18;
        @include helvetica;
        font-weight: bold;
        margin-bottom: 0em;
      }

      h2 {
        @include type-13;
        margin-bottom: 0.5em;
        margin-top: 1.25em;
      }

      a {
        display: block;
        @include type-16;
        margin-bottom: 0;
      }

      p {
        @include type-12;
        margin-bottom: 1em;

        a {
          font-size: 100%;
          display: inline;
        }
      }

      nav {
        a {
          display: block;
        }
        a.active {
          font-weight: bold;
          text-decoration: none;
        }
      }

      ol {
        margin-top: 0.25em;
        margin-left: 1.25em;
        list-style-type:disc;
        li {
          @include type-14;
          margin-bottom: 0.25em;
        }
      }
    }

    section#document_organisations,
    section#document_ministers {
      background-color: #EEE;
      padding: 0.75em 3% 0 3%;
    }

    section#document_organisations {
      ul {
        margin-bottom: 0;
        padding-bottom: 0.75em;
      }
    }

    section#document_ministers {
      ul {
        padding-bottom: 0.75em;
      }
      li:last-child {
        margin-bottom: 0;
      }
    }

    section#document_topics {
      margin-bottom: 3em;
      margin-top: 1em;

      h1 {
        margin-bottom: 0.3215em;
      }
    }

    section#document_ministers {
      li {
        margin-bottom: 1.125em;

        h3.current_appointee {
          @include type-16;
          margin-bottom: 0;

          a {
            font-weight: bold;
          }
        }

        p.role {
          @include type-14;
          margin-bottom: 0;
        }
      }
    }
  }
}
