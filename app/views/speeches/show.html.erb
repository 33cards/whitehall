<% page_title @document.title, "Speeches" %>

<div class="g4 speech">
  <div class="g3">
    <section class="page_header speech">
      <section class="page_header">
        <h1>Speech</h1>
        <p>Everything you need to know about this speech</p>
      </section>
      <h1 class="page_title title has_meta"><%= @document.title %></h1>
      <div class="meta">
        <%= announcement_metadata(@document) %>
      </div>



    <div class="g1f">
      <section class="contextual_info">
        <h1>Notable dates</h1>
        <p class="details">
          <span class="type"><%= @document.speech_type.name %></span> for speech delivered by
          <span class="ministerial_role"><%= link_to @document.role_appointment.role, @document.role_appointment.role %></span> on
          <span class="delivered_on"><%= @document.delivered_on.to_s(:long_ordinal) %></span> at
          <span class="location"><%= @document.location %></span>
        </p>
      </section>
    </div>
    <div class="g2 document_view">
      <article class="document">
        <div class="body">
          <%= govspeak_to_html @document.body, @document.images %>
        </div>
      </article>
    </div>
  </div>
  <div class="g1">      
    <% if @document.countries.any? %>
      <section id="document_countries">
        <h1>Countries this policy affects</h1>
        <ul class="countries">        
          <% @document.countries.each do |country| %>
            <li><%= link_to country.name, country_path(country), class: "country", id: dom_id(country) %></li>
          <% end %>
        </ul>
      </section>
    <% end %>
    
    <% if @policy_topics.any? %>
      <section id="document_topics">
        <h1>Topics</h1>
        <ul class="topics">
          <% @policy_topics.each do |policy_topic| %>
            <li>
              <%= link_to policy_topic.name, policy_topic_path(policy_topic), class: "policy_topic", id: dom_id(policy_topic) %>
            </li>
          <% end %>
        </ul>
      </section>
    <% end %>
      
    <%= render partial: 'related_policies', object: @related_policies %>
  </div>
</div>
