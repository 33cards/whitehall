<div class="g2">
  <section class="document_view">
    <h1 class="title"><%= @document.title %></h1>
    <div class="body">
      <%= govspeak_to_html @document.body %>
    </div>
    <p class="details">
      <span class="type"><%= @document.class.name.demodulize.titleize %></span> for speech delivered by <span class="ministerial_role"><%= link_to @document.role_appointment.role, @document.role_appointment.role %></span> on <span class="delivered_on"><%= @document.delivered_on.to_s(:long_ordinal) %></span> at <span class="location"><%= @document.location %></span>
    </p>
  </section>
</div>

<div class="g1 secondary">
  <% if @related_policies.any? %>
    <section id="related-policies">
      <h1>Related policies</h1>
      <ul>
        <% @related_policies.each do |policy| %>
          <%= content_tag_for :li, policy do %>
            <%= link_to policy.title, public_document_path(policy) %>
          <% end %>
        <% end %>
      </ul>
    </section>
  <% end %>

  <%= render partial: 'countries', locals: { countries: @document.countries } %>
</div>
