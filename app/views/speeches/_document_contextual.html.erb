<section class="contextual_info">
  <ul class="details">
    <li>
      <h1>Who</h1>
      <div class="img"><%= image_for_person @document.person %></div>
      <span class="ministerial_role"><%= link_to @document.role, @document.role %></span>
    </li>
    <li class="delivered_on">
      <h1>When</h1>
      <%= @document.delivered_on.to_s(:long_ordinal) %>
    </li>
    <% if @document.location %>
      <li class="location">
        <h1>Where</h1>
        <%= @document.location %>
      </li>
    <% end %>
    <% if @document.explanation %>
      <li class="explanation">
        <%= @document.explanation %>
      </li>
    <% end %>
  </ul>
</section>
