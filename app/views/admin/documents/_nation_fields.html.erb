<fieldset>
  <legend>Excluded Nations</legend>
  <%= form.fields_for :nation_inapplicabilities do |inapplicability_form| %>
    <%= inapplicability_form.label :_destroy, inapplicability_form.object.nation.name %>
    <%= inapplicability_form.check_box :_destroy, { checked: inapplicability_form.object.persisted? }, '0', '1' %>
    <%= inapplicability_form.hidden_field :nation_id %>
  <% end %>
</fieldset>
