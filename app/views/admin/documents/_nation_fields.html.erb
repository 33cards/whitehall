<fieldset class="excluded_nations named">
  <legend>Excluded Nations</legend>
  <%= form.fields_for :nation_inapplicabilities do |ni_form| %>
    <div class="group">
      <div class="col nation">
        <%= ni_form.label :_destroy, ni_form.object.nation.name %>
        <%= ni_form.check_box :_destroy, *inapplicability_checkbox_options(ni_form) %>
      </div>
      <div class="col">
        <%= ni_form.text_field :alternative_url %>
        <%= ni_form.hidden_field :nation_id %>
      </div>
    </div>
  <% end %>
</fieldset>
