<fieldset class="excluded_nations named">
  <legend>Excluded Nations</legend>
  <%= form.fields_for :nation_inapplicabilities do |ni_form| %>
    <div class="group">
      <div class="col nation">
        <%= ni_form.label :_destroy do %>
          <%- checkbox = ni_form.check_box :_destroy, *nested_attribute_destroy_checkbox_options(ni_form) %>
          <%- label_text = ni_form.object.nation.name %>
          <%- checkbox + label_text %>
        <% end %>
      </div>
      <div class="col">
        <%= ni_form.text_field :alternative_url %>
        <%= ni_form.hidden_field :nation_id %>
      </div>
    </div>
  <% end %>
</fieldset>
