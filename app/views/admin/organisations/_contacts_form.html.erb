<fieldset class="contact well form-horizontal">
  <%= contacts_form.text_field :description, horizontal: true %>
  <%= contacts_form.text_area :address, rows: 3, class: "address", horizontal: true %>
  <%= contacts_form.text_field :postcode, horizontal: true %>
  <%= contacts_form.text_field :email, horizontal: true %>
  <fieldset class="contact_numbers">
    <legend>Phone numbers</legend>
    <%= contacts_form.fields_for :contact_numbers, contacts_form.object.contact_numbers + [ContactNumber.new] do |contact_number_form| %>
    <fieldset class="contact_number">
      <%= contact_number_form.text_field :label, horizontal: true %>
      <%= contact_number_form.text_field :number, horizontal: true %>
    </fieldset>
    <% end %>
  </fieldset>
</fieldset>
