<% page_title "Edit " + @policy_topic.name %>

<section>
  <h1>Edit policy topic</h1>
  <%= render partial: "form", locals: {policy_topic: @policy_topic} %>
</section>

<section>
  <h1>Delete policy topic</h1>
  <% if @policy_topic.destroyable? %>
    <%= button_to 'Delete', admin_policy_topic_path(@policy_topic), method: :delete, confirm: 'Are you sure you want to delete this policy topic?', class: 'btn' %>
  <% else %>
    <span class="policies_preventing_destruction">This policy topic can't be deleted as it has associated policies: <%= policies_preventing_destruction(@policy_topic) %></span>
  <% end %>
</section>
