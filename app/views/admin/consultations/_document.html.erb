<article class="document_view">
  <h1 class="title"><%= document.title %></h1>
  <div class="body">
    <%= govspeak_to_admin_html document.body %>
  </div>

  <%= render partial: "attachments", locals: { document: document }  %>

  <p class="opening_on"><%= consultation_opening_phrase(document) %></p>
  <p class="closing_on"><%= consultation_closing_phrase(document) %></p>
  <p class="written_by">Written by <span class="authors"><%= document.author_names.to_sentence %></span></p>
</article>
