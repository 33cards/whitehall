<%= standard_edition_form(edition) do |form| %>
  <fieldset>
    <legend>Associations</legend>
    <%= form.label :policy_team_id %>
    <%= form.select :policy_team_id, PolicyTeam.order(:name).all.map { |team| ["#{team.name} (#{team.email})", team.id] }, {include_blank: true}, class: 'chzn-select', data: { placeholder: "Choose the policy team responsible for this policy..." } %>
    <%= render partial: 'organisation_fields', locals: { form: form, edition: edition } %>
    <%= render partial: 'topic_fields', locals: { form: form, edition: edition } %>
    <%= render partial: 'minister_fields', locals: { form: form, edition: edition } %>
    <%= render partial: 'country_fields', locals: { form: form, edition: edition } %>
  </fieldset>

  <%= render partial: 'nation_fields', locals: { form: form, edition: edition } %>

  <fieldset>
    <%= form.check_box :stub, label_text: "Stub?" %>
  </fieldset>
<% end %>
