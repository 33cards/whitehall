<%= standard_edition_form(edition) do |form| %>
  <%= form.check_box :access_limited, label_text: "Limit access to producing organisations prior to publication" %>

  <%= render partial: 'attachment_fields', locals: { form: form, edition: edition, parent_type: :edition, show_inline_attachment_help: edition.allows_inline_attachments? } %>
  <fieldset>
    <legend>Associations</legend>
    <%= render partial: 'document_series_fields', locals: { form: form, edition: edition } %>
    <%= render partial: 'organisation_fields', locals: { form: form, edition: edition } %>
  </fieldset>
<% end %>
