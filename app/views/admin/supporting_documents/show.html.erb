<div class="g2 first">
  <nav class="actions">
    <% if @supporting_document.document.editable? %>
        <%= link_to 'Edit', edit_admin_supporting_document_path(@supporting_document), title: "Edit #{@supporting_document.title}", :class => "button" %>
    <% end %>
    <% if @supporting_document.destroyable? %>
        <%= button_to 'Remove', admin_supporting_document_path(@supporting_document), method: :delete, title: "Remove #{@supporting_document.title}" %>
    <% end %>
    <%= link_to "Back to '#{@supporting_document.document.title}'", admin_document_path(@supporting_document.document), title: "Back to #{@supporting_document.document.title}", class: "back" %>
  </nav>
  <section class="document_view">
    <h1 class="title"><%= @supporting_document.title %></h1>
    <div class="body">
      <%= govspeak_to_admin_html @supporting_document.body %>
    </div>
  </section>
</div>
