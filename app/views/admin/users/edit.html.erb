<% page_title "Edit " + @user.name, "Users" %>
<section class="user">
  <h1>Edit settings</h1>
  <%= form_for @user, as: :user, url: admin_user_path, html: { method: :put } do |form| %>
    <%= form.errors %>

    <%= form.text_field :email %>

    <%= form.save_or_cancel cancel: admin_user_path %>
  <% end %>
</section>
