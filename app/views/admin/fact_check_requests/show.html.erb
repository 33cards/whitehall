<% page_title "Thanks for your fact check response" %>

<div class="span8">
  <section class="document_view" id="<%= dom_id(@edition) %>">
    <%= render partial: 'admin/editions/edition', locals: { edition: @edition } %>
  </section>

  <% if @edition.has_supporting_pages? %>
    <section id="supporting_pages">
      <h1>Supporting pages</h1>
      <% @edition.supporting_pages.each do |supporting_page| %>
        <div class="document_view">
          <h1 class="title"><%= supporting_page.title %></h1>
          <div class="body">
            <%= govspeak_to_admin_html supporting_page.body %>
          </div>
        </div>
      <% end %>
    </section>
  <% end %>
</div>

<div class="span4">
  <div class="alert alert-success">
    <p>Thanks for submitting your response to this fact checking request.</p>
  </div>

  <div class="fact_check_request well">
    <p class="details">
      <span class="from"><%= @fact_check_request.email_address %></span>
      on
      <span class="time"><%= @fact_check_request.updated_at.to_s(:long_ordinal) %></span>
    </p>

    <div class="comments">
      <%= format_in_paragraphs @fact_check_request.comments %>
    </div>
  </div>
</div>