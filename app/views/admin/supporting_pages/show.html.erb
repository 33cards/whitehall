<% page_title @supporting_page.title, "Supporting page for " + @supporting_page.document_title %>
<div class="span8">
  <%= render partial: "supporting_page", object: @supporting_page %>
</div>

<div class="span4">
  <nav class="actions">
    <%= link_to "Back to '#{@supporting_page.document_title}'", admin_edition_path(@supporting_page.edition), title: "Back to #{@supporting_page.document_title}", class: "back" %>

    <% if @supporting_page.editable? %>
        <%= link_to 'Edit', edit_admin_supporting_page_path(@supporting_page), title: "Edit #{@supporting_page.title}", :class => "btn" %>
    <% else %>
      <p class="alert">To edit this supporting page,
        <% if !@supporting_page.edition.is_latest_edition? %>
          please <%= link_to "visit the most recent edition of '#{@supporting_page.document_title}'", admin_edition_path(@supporting_page.edition.latest_edition), title: "Go to most recent edition of #{@supporting_page.edition.title}" %>.
        <% else %>
          please create a new edition of <%= link_to "'#{@supporting_page.document_title}'", admin_edition_path(@supporting_page.edition), title: "Back to #{@supporting_page.document_title}" %>.
        <% end %>
        </p>
    <% end %>
    <% if @supporting_page.destroyable? %>
        <%= button_to 'Remove', admin_supporting_page_path(@supporting_page), method: :delete, title: "Remove #{@supporting_page.title}", confirm: "Are you sure you want to remove the supporting page?", class: "btn btn-danger" %>
    <% end %>
  </nav>
</div>
