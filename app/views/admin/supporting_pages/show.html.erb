<% page_title @supporting_page.title, "Supporting page for " + @supporting_page.document_title %>
<div class="span8">
  <section class="document_view">
    <article class="document">
      <h1 class="title"><%= @supporting_page.title %></h1>
      <div class="body">
        <%= govspeak_to_admin_html @supporting_page.body %>
      </div>
    </article>
    <h3>Attachments:</h3>
    <%= render partial: "documents/attachments", locals: { object_with_attachments: @supporting_page }  %>
  </section>
</div>

<div class="span4">
  <nav class="actions">
    <%= link_to "Back to '#{@supporting_page.document_title}'", admin_edition_path(@supporting_page.edition), title: "Back to #{@supporting_page.document_title}", class: "back" %>

    <% if @supporting_page.editable? %>
        <%= link_to 'Edit', edit_admin_supporting_page_path(@supporting_page), title: "Edit #{@supporting_page.title}", :class => "btn" %>
    <% end %>
    <% if @supporting_page.destroyable? %>
        <%= button_to 'Remove', admin_supporting_page_path(@supporting_page), method: :delete, title: "Remove #{@supporting_page.title}", confirm: "Are you sure you want to remove the supporting page?", class: "btn" %>
    <% end %>
  </nav>
</div>