<% page_title @supporting_page.title, "Supporting page for " + @supporting_page.document_title %>
<div class="g2 first">
  <nav class="actions">
    <% if @supporting_page.document_editable? %>
        <%= link_to 'Edit', edit_admin_supporting_page_path(@supporting_page), title: "Edit #{@supporting_page.title}", :class => "button" %>
    <% end %>
    <% if @supporting_page.destroyable? %>
        <%= button_to 'Remove', admin_supporting_page_path(@supporting_page), method: :delete, title: "Remove #{@supporting_page.title}", confirm: "Are you sure you want to remove the supporting page?" %>
    <% end %>
    <%= link_to "Back to '#{@supporting_page.document_title}'", admin_document_path(@supporting_page.edition), title: "Back to #{@supporting_page.document_title}", class: "back" %>
  </nav>
  <section class="document_view">
    <h1 class="title"><%= @supporting_page.title %></h1>
    <div class="body">
      <%= govspeak_to_admin_html @supporting_page.body %>
    </div>
    <h3>Attachments:</h3>
    <%= render partial: "documents/attachments", locals: { object_with_attachments: @supporting_page }  %>
  </section>
</div>
