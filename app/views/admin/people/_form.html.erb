<%= form_for [:admin, person] do |person_form| %>
  <%= person_form.errors %>

  <fieldset>
    <%= person_form.check_box :privy_counsellor, label_text: 'Rt Hon?' %>
    <%= person_form.text_field :title %>
    <%= person_form.text_field :forename %>
    <%= person_form.text_field :surname %>
    <%= person_form.text_field :letters %>
  </fieldset>
  <fieldset>
    <%= person_form.fields_for(:worldwide_office_appointment) do |appointment| %>
      <%= appointment.hidden_field :worldwide_office_id %>
      <%= appointment.text_field :job_title, label_text: 'Worldwide office job title' %>
    <% end %>
  </fieldset>
  <fieldset class="image">
    <%= person_form.label :image, 'Image' %>
    <%= image_tag person.image_url || 'blank-person.png' %>
    <%= person_form.file_field :image %>
  </fieldset>
  <fieldset>
    <%= person_form.text_area :biography, class: "previewable" %>
  </fieldset>

  <%= person_form.save_or_cancel cancel: admin_people_path %>
<% end %>
