<% page_title "Edit " + @country.name %>

<div class="span8">
  <section>
    <h1>Edit country</h1>
    <%= form_for([:admin, @country]) do |form| %>
      <%= form.text_area :description %>

      <fieldset>
        <%= form.text_area :about, class: 'previewable' %>
      </fieldset>

      <%= form.check_box :active,
                label_text: "Active (can visitors click through from the country list?)" %>

      <fieldset>
        <legend>Embassy contact details</legend>
        <%= form.text_area :embassy_address, rows: 4 %>
        <%= form.text_field :embassy_telephone %>
        <%= form.text_field :embassy_email %>
      </fieldset>

      <%= form.submit "Save", class: "btn" %>
    <% end %>
  </section>
</div>

<div class="span4">
  <div class="sidebar tabbable">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#news-articles" data-toggle="tab">News Articles</a></li>
      <li><a href="#govspeak_help" data-toggle="tab">Formatting Help</a></li>
    </ul>
    <div class="tab-content">
      <section class="tab-pane active" id="news-articles">
        <% if @news_articles.any? %>
          <h1>News Articles</h1>
          <table class="table table-striped table-condensed">
            <thead>
              <tr>
                <th>Title</th>
                <th>Published</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @news_articles.each do |news_article| %>
                <%= content_tag_for(:tr, news_article) do %>
                  <td><%= link_to news_article.title, admin_edition_path(news_article) %></td>
                  <td><%= time_ago_in_words news_article.updated_at %> ago</td>
                  <td>
                    <% association = news_article.edition_countries.where(country_id: @country).first %>
                    <%= form_for([:admin, association], html: {class: "button_to"}) do |f| %>
                      <% if association.featured? %>
                        <%= f.hidden_field :featured, value: false %>
                        <%= f.submit "No longer feature", class: "btn btn-mini" %>
                      <% else %>
                        <%= f.hidden_field :featured, value: true %>
                        <%= f.submit "Feature", class: "btn btn-mini" %>
                      <% end %>
                    <% end %>
                  </td>
                <% end %>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>No published news articles.</p>
        <% end %>
      </section>
      <section class="tab-pane active govspeak_help" id="govspeak_help">
        <%= render partial: "admin/editions/govspeak_help" %>
      </section>
    </div>
  </div>
</div>