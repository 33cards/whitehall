<% page_title "Edit " + @country.name %>
<div class="g2 first">
  <section>
    <h1>Edit country</h1>
    <%= form_for([:admin, @country]) do |form| %>
      <%= form.text_area :description %>

      <%= render partial: 'admin/documents/govspeak_help' %>
      <fieldset>
        <%= form.text_area :about, class: 'previewable', help: true %>
      </fieldset>

      <%= form.check_box :active,
                label_text: "Active (can visitors click through from the country list?)" %>

      <fieldset>
        <legend>Embassy contact details</legend>
        <%= form.text_area :embassy_address, rows: 4 %>
        <%= form.text_field :embassy_telephone %>
        <%= form.text_field :embassy_email %>
      </fieldset>

      <%= form.submit "Save" %>
    <% end %>
  </section>
</div>
