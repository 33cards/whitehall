<fieldset class="js-change-notes">
  <h3>To save this document please complete the following</h3>
  <p>Select an option:</p>
    <%= form.label :minor_change_true, class: 'radio' do %>
      <%= form.radio_button(:minor_change, true) %>
      <strong>Update the document silently</strong> - for minor changes like fixes to typos, links, GOV.UK style or metadata
    <% end %>

    <%= form.label :minor_change_false, class: 'radio' do %>
      <%= form.radio_button(:minor_change, false) %>
      <strong>Alert the public to what's changed</strong> - for important changes to the content or attached files
    <% end %>

    <div class="js-change-notes-section">
      <%= form.text_area(:change_note, rows: 4, placeholder: 'Input text to display publicly on the live site and in email alerts', label_text:"<strong>Public change note</strong>".html_safe) %>
    </div>
</fieldset>
