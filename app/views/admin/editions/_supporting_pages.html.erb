<h1>Supporting pages</h1>
<ul>
  <% edition.supporting_pages.each do |supporting_page| %>
    <%= content_tag_for :li, supporting_page do %>
      <%= link_to admin_supporting_page_path(supporting_page) do %>
        <span class="title"><%= supporting_page.title %></span>
        <span class="body"><%= truncate(supporting_page.body, { length: 100 }) %></span>
      <% end %>
    <% end %>
  <% end %>

  <% if edition.editable? %>
    <li class="add_supporting_page"><%= link_to 'Add', new_admin_edition_supporting_page_path(edition), title: "Add supporting page to #{edition.title}", :class => "button" %></li>
  <% end %>
</ul>
