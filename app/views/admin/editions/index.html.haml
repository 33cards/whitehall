=render partial: 'index_heading'

%section.resource_list
  %h1 Drafts
  =link_to "Draft new Policy", new_admin_edition_path, class: "button new_resource"
  =link_to "Draft new Publication", new_admin_edition_path, class: "button new_resource"

  %table#draft_policies
    %thead
      %tr
        %th Title
        %th Author
        %th.actions Actions
    %tbody
      - @editions.each do |edition|
        %tr.policy{class: "edition-#{edition.id}"}
          %td.title= edition.title
          %td.author= edition.author.name
          %td.actions
            = link_to 'Edit', edit_admin_edition_path(edition), title: "Edit #{edition.title}"
