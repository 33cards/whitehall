<% page_title "Edit statistics announcement" %>
<div class="span8">
  <h1>Edit statistics announcement</h1>

  <%= render "form", publication_announcement: @publication_announcement %>
</div>

<div class="span4">
  <div class="sidebar">
    <section class="display_heading">
        <%= button_to('Delete announcement',
                      admin_publication_announcement_path(@publication_announcement),
                      method: :delete,
                      data: { confirm: "Are you sure you want to delete this announcement?" },
                      class: 'btn btn-danger') %>
    </section>
  </div>
</div>
