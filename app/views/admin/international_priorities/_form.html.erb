<%= form_for [:admin, edition], as: :document do |form| %>
  <%= form.errors %>
  <%= render partial: 'standard_fields', locals: { form: form, edition: edition }%>
  <%= render partial: 'country_fields', locals: { form: form, edition: edition } %>
  <%= render partial: 'organisation_fields', locals: { form: form, edition: edition } %>
  <%= form.save_or_cancel %>
<% end %>
