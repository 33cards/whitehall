<%= form_for [:admin, edition], as: :edition do |form| %>
  <%= form.errors %>
  <%= render partial: 'standard_fields', locals: { form: form, edition: edition }%>
  <%= render partial: 'related_policy_fields', locals: { form: form, edition: edition } %>
  <%= render partial: 'organisation_fields', locals: { form: form, edition: edition } %>
  <%= render partial: 'minister_fields', locals: { form: form, edition: edition } %>
  <%= render partial: 'country_fields', locals: { form: form, edition: edition } %>

  <fieldset>
    <%= form.text_area :notes_to_editors, "class" => "previewable", help: true %>
  </fieldset>

  <%= render partial: 'first_published_at', locals: { form: form, edition: edition } %>

  <%= form.save_or_cancel %>
<% end %>
