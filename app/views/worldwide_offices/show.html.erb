<% page_title @worldwide_office.name %>
<% page_class "worldwide-offices-show" %>

<%= content_tag_for(:div, @worldwide_office) do %>
  <div class="block-1">
    <div class="inner-block">
      <header class="page-header">
        <%= content_tag :div, class: "worldwide-office-name" do %>
          <%= content_tag :h1 do %>
            <span class="<%= logo_classes(class_name: 'single-identity', size: 'large', stacked: true) %>">
              <span><%= format_with_html_line_breaks(h(@worldwide_office.logo_formatted_name)) %></span>
            </span>
          <% end %>
        <% end %>
        <aside class="worldwide-office-social-media-links">
          <div class="social-media">
            <div class="content">
              <%= render 'shared/social_media_accounts', socialable: @worldwide_office, followus: true %>
            </div>
          </div>
        </aside>
      </header>
    </div>
  </div>

  <div class="block-1">
    <div class="inner-block">
      <section>
        <article class="document">
          <p class="sponsoring-organisations">
            Part of <%= @worldwide_office.sponsoring_organisations.map {|o| link_to(o.name, o, class: "sponsoring-organisation") }.to_sentence.html_safe %>
          </p>

          <h1 class="label">About us</h1>
          <div class="summary">
            <div class="content">
              <%= @worldwide_office.summary %>
            </div>
          </div>

          <div class="description">
            <div class="content">
              <%= govspeak_to_html @worldwide_office.description %>
            </div>
          </div>

          <h1 class="label">Our services</h1>
          <div class="services">
            <div class="content">
              <%= govspeak_to_html @worldwide_office.services %>
            </div>
          </div>
        </article>
      </section>
    </div>
  </div>

  <% if @main_contact %>
    <div class="block-10 vcard">
      <div class="inner-block">
        <section class="contact-wrapper contact-us">
          <h1 class="label">Contact us</h1>
          <div id="org-contacts">
            <%= render partial: 'contacts/contact', :locals => {contact: @main_contact, is_main: true} %>
            <%= render partial: 'contacts/contact', collection: @other_contacts %>
          </div>
        </section>
      </div>
    </div>
  <% end %>
<% end %>
