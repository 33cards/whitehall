<% page_title @document.title, "Statistical data sets" %>

<div class="document-page <%= @document.type.downcase %>">
  <div class="block-1">
    <div class="inner-block">
      <%= render  partial: 'header',
                  locals: {
                    header_title: "Statistical data set",
                    document: @document,
                    policies: @related_policies
                  } %>
    </div>
  </div>
  <div class="block-2 ">
    <div class="inner-block">
      <%= render partial: "document_summary", locals: { document: @document } %>
      <% if @document.part_of_series? %>
        <p class="document-series">
          <span>This statistical data is part of a series:</span> <%= link_to @document.document_series.name, organisation_document_series_path(@document.document_series.organisation, @document.document_series) %>
        </p>
      <% end %>
    </div>
  </div>

  <div class="block-3">
    <div class="inner-block">
      <div class="document body">
        <%= govspeak_edition_to_html @document %>
      </div>
    </div>
  </div>
</div>
