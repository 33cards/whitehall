<% page_title "Statistics", "Upcoming calendar" %>
<% page_class "release-announcements-index" %>

<header class="block headings-block">
  <div class="inner-block floated-children">
    <%= render partial: 'shared/heading',
              locals: { big: true,
                        heading: "Statistics: Upcoming calendar" } %>
  </div>
</header>

<%= full_width_tabs [
  { label: "Published",         link_to: publications_filter_path(publication_filter_option: 'statistics') },
  { label: "Upcoming Calendar", link_to: release_announcements_path }
] %>

<div class="filter-form-block">
  <div class="inner-block">
    <h2>You can use the filters to show only results that match your interests</h2>
    <%= form_for @filter, url: release_announcements_path, method: :get, html: { class: "filter-form" } do |f| %>
      <fieldset>
        <div class="filter">
          <div class="filter-inner">
            <%= f.text_field :keywords, label_text: "Contains", placeholder: "keywords" %>
          </div>
        </div>
        <div class="filter date-range-filter">
          <div class="filter-inner">
            <%= f.text_field :from_date, label_text: "Published after", placeholder: "e.g. 01/01/2013" %>
            <%= f.text_field :to_date, label_text: "Published before", placeholder: "e.g. 30/02/2013" %>
          </div>
        </div>
        <%= f.submit "Refresh results", class: "button" %>
      </fieldset>
    <%- end -%>
  </div>
</div>

<div class="filter-results-block">
  <div class="inner-block">
    <h2>This calendar of upcoming releases is maintained by the <a href="https://gss.civilservice.gov.uk/">Government Statistical Service</a> independently from government
    <ol class="document-list">
      <%= render @release_announcements %>
    </ol>
  </div>
</div>
