<% page_title "Policy topics" %>
<% page_class "policy-topics-index" %>


<div class="block-1">
  <div class="inner-block">
    <header class="page_header policytopic icon">
        <h1 class="page_title">Policy</h1>
    </header>
  </div>
</div>

<div class="block-2">
  <div class="inner-block">
    <% if @featured_policy_topics.any? %>
      <section class="featured_items" id="featured-policytopics">
        <h1 class="label">Featured</h1>
        <% @featured_policy_topics.each do |featured_policy_topic| %>
          <div class="<%= featured_grid_class(@featured_policy_topics.length) %>">
            <%= content_tag_for(:article, featured_policy_topic) do %>
              <h2><%= link_to featured_policy_topic.name, policy_topic_path(featured_policy_topic), class: "name" %></h2>
              <p class="summary description">
                <%= featured_policy_topic.description %>
              </p>
            <% end %>
          </div>
        <% end %>
      </section>
    <% end %>
    
    <% if @policy_topics.any? %>
      <%= render partial: "grouped_list", locals: {policy_topics: @policy_topics} %>
    <% else %>
      <p>We don't have any policy topics with published documents at present.</p>
    <% end %>

  </div>
</div>
