<div class="alphabetical_list group" id="policy_topics">
  <h1 class="g3 label">A-Z Listing</h1>

  <% policy_topics.group_by {|t| t.name.first.upcase }.sort.in_groups_of(3, false) do |row| %>
    <% row.each do |letter, policy_topic_group| %>
      <div class="alphabetical_row g4" id="policy_topics_<%= letter.downcase %>">
        <div class="g1f"><h2 class="label"><%= letter %></h2></div>
        <div class="g3f">
          <%= render partial: "list", locals: { policy_topics: policy_topic_group } %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>