<div class="alphabetical_list g3">
  <h1>A-Z Listing</h1>
  <% policy_topics.group_by {|t| t.name.first.upcase }.sort.in_groups_of(3, false) do |row| %>
    <div class="group alphabetical_row g3f">
      <% row.each do |letter, policy_topic_group| %>
        <div class="alphabetical_group g1" id="policy_topics_<%= letter.downcase %>">
          <h2><%= letter %></h2>
          <%= render partial: "list", locals: { policy_topics: policy_topic_group } %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>