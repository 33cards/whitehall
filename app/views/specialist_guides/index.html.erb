<% page_title "Specialist guides" %>
<% page_class "specialist-guides-index" %>

<div class="block-1">
  <div class="inner-block">
    <header class="page_header specialist-guides icon">
      <h1 class="page_title">Specialist Guides</h1>
    </header>
  </div>
</div>

<div class="block-2">
  <div class="inner-block">
    <section id="specialist_guides" class="announcements group">
      <% @topics_and_published_specialist_guides.each do |topic| %>
        <%= content_tag_for(:div, topic) do %>
          <h2><%= topic.name %></h2>
          <ul>
            <% topic.published_specialist_guides.each do |specialist_guide| %>
              <%= content_tag_for(:li, specialist_guide, class: "specialist-guide") do %>
                <%= link_to specialist_guide.title, public_document_path(specialist_guide) %>
              <% end %>
            <% end %>
          </ul>
        <% end %>
      <% end %>
    </section>
  </div>
</div>
