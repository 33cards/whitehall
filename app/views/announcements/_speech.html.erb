<%= content_tag_for(:article, speech, class: "speech") do %>
  <div class="text">
    <h2><%= link_to speech.title, public_document_path(speech), class: "title", title: "View #{speech.title}" %></h2>
    <% if display != "compact" %>
      <p class="summary">
        <%= speech.summary %>
      </p>
    <% end %>
    <div class="meta">
      <% if speech.delivered_on %>
        <span class="published_at">Delivered <%= relative_time(speech.delivered_on, class: 'delivered_on') %></span>
      <% else %>
        <span class="published_at">Posted <%= relative_time(speech.first_published_at, class: 'first_published_at') %></span>
      <% end %>
      <%= link_to speech.role_appointment.person.name, speech.role_appointment.role, class: "ministerial_role tag" %>
    </div>
  </div>
<% end %>
