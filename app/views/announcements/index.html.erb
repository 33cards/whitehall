<% page_title "News & Speeches" %>
<% page_class "announcements-index" %>

<div class="g3">
  <section class="page_header news-speech icon">
    <h1 class="page_title">News &amp; speeches</h1>
  </section>
</div>

<% if @announced.featured_news.any? %>
  <section class="announcements four_column_list" id="featured_news">
    <div class="g4f">
      <div class="g1"><h1 class="label">Featured</h1></div>
      <div class="g3f">
        <%= announcement_group(@announced.featured_news, groups_of: 3, partial: "expanded") %>
      </div>
    </div>
  </section>
<% end %>

<% if @announced.today.any? %>
  <section class="announcements four_column_list" id="last_24_hours">
    <div class="g4f">
      <div class="g1"><h1 class="label">In the last 24 hours</h1></div>
      <div class="g3f">
        <%= announcement_group(@announced.today.featured, groups_of: 3, partial: "expanded") %>
        <%= announcement_group(@announced.today.unfeatured, groups_of: 3, partial: "default") %>
      </div>
    </div>
  </section>
<% end %>

<% if @announced.in_last_7_days.any? %>
  <section class="announcements four_column_list" id="last_7_days">
    <div class="g4f">
      <div class="g1">
        <h1 class="label">In the last 7 days</h1>
      </div>
      <div class="g3f">
        <% if @announced.today.any? %>
          <%= announcement_group(@announced.in_last_7_days, groups_of: 3, partial: "default") %>
        <% else %>
          <%= announcement_group(@announced.in_last_7_days.featured, groups_of: 3, partial: "expanded") %>
          <%= announcement_group(@announced.in_last_7_days.unfeatured, groups_of: 3, partial: "default") %>
        <% end %>
      </div>
    </div>
  </section>
<% end %>

<p class="further_articles">View all <%= link_to "news", news_articles_path %> or <%= link_to "speeches", speeches_path %></p>
