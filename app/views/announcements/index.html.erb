<div class="g3f group">
  <h1 class="page_title">News &amp; speeches</h1>
  <% if @featured_news_articles.any? %>
    <section class="featured_items" id="featured-news-articles">
      <% @featured_news_articles.each do |news_article| %>
        <%= content_tag_for(:article, news_article) do %>
          <div class="inner">
            <h2><%= link_to news_article.title, public_document_path(news_article), class: "title" %></h2>
            <p class="summary"><%= news_article.summary %></p>
            <p class="metadata">
              <%= render_datetime_microformat(news_article, :published_at) do %>
                <%= time_ago_in_words(news_article.published_at) %> ago
              <% end %>
              <% unless news_article.policy_areas.length.zero? %>
                <span class="policy_area"><%= news_article.policy_areas.map { |pa| link_to pa.name, policy_area_path(pa) }.to_sentence.html_safe %></span>
              <% end %>
            </p>
          </div>
        <% end %>
      <% end %>
    </section>
  <% end %>

  <section class="group" id="recent_announcements">
    <h1>Latest from across government</h1>
    <%= announcement_group(@announcements.take(6), groups_of: 3, class: "most_recent", partial: "expanded") %>
    <%= announcement_group(@announcements.from(6).take(12), groups_of: 2, class: "less_recent", partial: "default") %>
    <%= announcement_group(@announcements.from(18), groups_of: 3, class: "remaining", partial: "compact") %>
  </section>
</div>