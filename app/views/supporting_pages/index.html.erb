<% page_title "Supporting pages for " + @policy.title, "Policies"%>
<div class="g3f">
  <nav class="actions" role="navigation">
    <%= link_to "Back to '#{@policy.title}'", public_document_path(@policy), title: "Back to #{@policy.title}" %>
  </nav>
  <% if @supporting_pages.empty? %>
    <h1 class="page_title">Supporting pages</h1>
    <p>This policy doesn't have any supporting pages at present.</p>
  <% else %>
    <section id="supporting_pages">
      <h1>Supporting pages</h1>
      <ul>
        <% @supporting_pages.each do |supporting_page| %>
          <%= content_tag_for :li, supporting_page do %>
            <%= link_to supporting_page.title, policy_supporting_page_path(@policy.document, supporting_page), class: "title" %>
          <% end %>
        <% end %>
      </ul>
    </section>
  <% end %>
</div>