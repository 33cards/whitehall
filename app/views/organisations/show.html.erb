<%= content_tag_for :article, @organisation do %>
  <h1 class="name"><%= @organisation.name %></h1>
<% end %>

<% if @organisation.published_policies.any? %>
<section id="policies">
  <h1>Policies</h1>
  <ul class="policies">
    <% @organisation.published_policies.each do |policy| %>
      <%= content_tag_for(:li, policy) do %>
        <%= link_to policy.title, document_path(policy.document), title: "View #{policy.title}" %>
      <% end %>
    <% end %>
  </ul>
</section>
<% end %>

<% if @organisation.published_publications.any? %>
<section id="publications">
  <h1>Publications</h1>
  <ul class="publications">
    <% @organisation.published_publications.each do |publication| %>
      <%= content_tag_for(:li, publication) do %>
        <%= link_to publication.title, document_path(publication.document), title: "View #{publication.title}" %>
      <% end %>
    <% end %>
  </ul>
</section>
<% end %>

<% if @organisation.roles.any? %>
<section id="ministers">
  <h1>Ministers</h1>
  <ul class="ministers">
    <% @organisation.roles.each do |role| %>
      <%= content_tag_for(:li, role) do %>
        <%= role.name %>
      <% end %>
    <% end %>
  </ul>
</section>
<% end %>