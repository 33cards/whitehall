<% page_title @organisation.name %>
<%= organisation_wrapper(@organisation, class: "hcard group") do %>
  <%= render "beta_warning", organisation: @organisation %>

  <div class="g4">
    <%= render 'header', organisation: @organisation %>
  </div>

  <div class="g4">
    <%= render partial: "shared/hero_rotator", locals: {news_articles: @featured_news_articles, options: {organisational_context: true}} %>
  </div>

  <div class="g4f">
    <div class="g1 <% if @featured_news_articles.any? %>sub_navigation_container<% end %>">
      <%= render 'sidebar', organisation: @organisation %>
    </div>
    <div class="g1">
      <section id="recently_updated" class="latest_documents">
        <h1 class="label">Latest</h1>
        <%= render(partial: "shared/recently_updated",
         locals: {recently_updated: @recently_updated}
        ) if @recently_updated.present? %>
      </section>
    </div>
    <div class="g1">
      <section id="who">
        <h1 class="label">People</h1>
        <% roles = [@organisation.top_ministerial_role, @organisation.top_civil_servant].compact %>
        <% if ministerial_role = @organisation.top_ministerial_role %>
          <section id="ministers">
            <h1 class="visuallyhidden">Minister</h1>
            <%= content_tag_for(:article, ministerial_role) do %>
              <div class="image_holder">
                <%= image_for_ministerial_role(ministerial_role) %>
              </div>
              <h3 class="current_appointee"><%= ministerial_role.current_person_name %></h3>
              <p class="role"><%= link_to ministerial_role.name, ministerial_role %></p>
            <% end %>
            <p class="view_all"><%= link_to 'View all ministers', ministers_organisation_path(@organisation) %></p>
          </section>
        <% end %>
        <% if management_role = @organisation.top_civil_servant %>
          <section id="management">
            <h1 class="visuallyhidden">Management</h1>
            <%= content_tag_for(:article, management_role) do %>
              <div class="image_holder">
                <%= image_for_ministerial_role(management_role) %>
              </div>
              <h3 class="current_appointee"><%= management_role.current_person_name %></h3>
              <p class="role"><%= management_role.name %></p>
            <% end %>
            <p class="view_all"><%= link_to 'View management team', management_team_organisation_path(@organisation) %></p>
          </section>
        <% end %>
      </section>
    </div>
    <div class="g1">
      <%= render partial: "documents/policy_topics", object: @organisation.policy_topics, title: "Our policy topics" %>
    </div>
  </div>
<% end %>