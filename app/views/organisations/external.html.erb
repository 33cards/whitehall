<% page_title @organisation.name %>
<% page_class "organisations-external" %>
<%= organisation_wrapper(@organisation, class: "hcard group") do %>

  <div class="block-1">
    <div class="inner-block">
      <div>
        <%= render 'header', organisation: @organisation %>
      </div>
    </div>
  </div>

  <div class="block-2">
    <div class="inner-block">
      <div class="description">
        <p><%= @organisation.description %></p>
        <p class="parent_organisations"><%= organisation_display_name_and_parental_relationship(@organisation) %></p>
      </div>
    </div>
  </div>

  <div class="block-3">
    <div class="inner-block">
      <section class="thumbnail">
        <%= link_to image_tag(organisation_site_thumbnail_path(@organisation), size: '287x215', alt: 'Thumbnail screenshot of website'), @organisation.url %>
      </section>
    </div>
  </div>

  <div class="block-4 govspeak">
    <div class="inner-block">
      <aside class="govuk-status information-block">
        <% if @organisation.joining? %>
        This organisation currently has a separate website but will soon be incorporated into GOV.UK
        <% else %>
        This organisation has a separate website
        <% end %>
      </aside>
      <div class="url">
        Go to: <%= link_to @organisation.url, @organisation.url %>
      </div>
    </div>
  </div>

  <% if @recently_updated.present? %>
    <div class="block-5">
      <div class="inner-block">
          <section id="recently_updated" class="latest_documents">
            <h1 class="label">Mentions on GOV.UK</h1>
            <%= render partial: "shared/recently_updated", locals: {recently_updated: @recently_updated} %>
          </section>
      </div>
    </div>
  <% end %>
<% end %>
