<% page_title "About ", @organisation.name %>
<% page_class "organisations-about organisation-page" %>

<%= organisation_wrapper(@organisation) do %>
  <article id="what-we-do">
    <div class="block-1">
      <div class="inner-block">
        <%= render partial: 'organisations/header', locals: {
              organisation: @organisation,
              link_to_organisation: true
            } %>
        <div class="contextual-info js-stick-at-top-when-scrolling">
          <nav>
            <h1>About us</h1>
            <ol>
              <li><%= link_to "What we do", "#what-we-do" %></li>
              <% govspeak_headers(@organisation.about_us).each do |header| %>
                <li><%= link_to header.text, "##{header.id}" %></li>
              <% end %>
              <% if has_any_transparency_pages?(@organisation) || @corporate_publications.any? %>
                <li><%= link_to "Corporate information", "#corporate-information" %></li>
              <% end %>
            </ol>
          </nav>
        </div>
      </div>
    </div>
      <div class="block-2">
        <div class="inner-block">
          <h1 class="main">What we do</h1>
          <p class="description">
            <%= @organisation.description %>
          </p>
          <div class="body">
            <%= govspeak_to_html @organisation.about_us %>
          </div>
        <% if has_any_transparency_pages?(@organisation) || @corporate_publications.any? %>
          <h1 class="label">Corporate information</h1>
          <div class="corporate-information">
            <h2>Access our information</h2>
            <nav class="group sub_navigation" role="navigation">
              <ul>
                <% @organisation.corporate_information_pages.by_menu_heading(:our_information).each do |corporate_information_page| %>
                  <li><%= link_to corporate_information_page.title, organisation_corporate_information_page_path(@organisation, corporate_information_page) %></li>
                <% end %>
              <% if @organisation.has_published_publications_of_type?(PublicationType::TransparencyData) %>
                <li><%= link_to "Transparency data", publications_filter_path(@organisation, publication_type: 'transparency-data') %></li>
              <% end %>
              <% if @organisation.has_published_publications_of_type?(PublicationType::FoiRelease) %>
                <li><%= link_to "FOI releases", publications_filter_path(@organisation, publication_type: 'foi-releases') %></li>
              <% end %>
              </ul>
            </nav>
          </div>
          <div class="corporate-information">
            <h2>Jobs and contracts</h2>
            <nav class="group sub_navigation corporate-information" role="navigation">
              <ul>
                <% @organisation.corporate_information_pages.by_menu_heading(:jobs_and_contracts).each do |corporate_information_page| %>
                  <li><%= link_to corporate_information_page.title, organisation_corporate_information_page_path(@organisation, corporate_information_page) %></li>
                <% end %>
                  <li><a href="https://jobsstatic.civilservice.gov.uk/csjobs.html" rel="external">Jobs</a></li>
              </ul>
            </nav>
          </div>
            <aside class="corporate-info" id="corporate-information">
              <p>
              <% if @organisation.corporate_information_pages.for_slug("publication-scheme").present? %>
                Read about the types of information we routinely publish in our <%= link_to "Publication Scheme", organisation_corporate_information_page_path(@organisation, "publication-scheme") %>.
              <% end %>
              <% if @organisation.corporate_information_pages.for_slug("welsh-language-scheme").present? %>
                Find out about our 
                commitment to publishing in the <%= link_to "Welsh language", organisation_corporate_information_page_path(@organisation, "welsh-language-scheme") %>.
              <% end %>
              <% if @organisation.corporate_information_pages.for_slug("personal-information-charter").present? %>
                Our <%= link_to "Personal information charter ", organisation_corporate_information_page_path(@organisation, "personal-information-charter") %> explains how we treat your personal information.
              <% end %>
              </p>
              <% if @corporate_publications.any? %>
                <h2>Reports</h2>
                <ul>
                  <% @corporate_publications.each do |publication| %>
                    <%= content_tag_for :li, publication, class: 'item' do %>
                      <h3 class="title"><%= link_to publication.title, public_document_path(publication) %></h3>
                      <span class="metadata">
                        Updated <%= relative_time(publication.updated_at, class: 'updated-at') %>
                      </span>
                    <% end %>
                  <% end %>
                </ul>
              <% end %>
            </aside>
        <% end %>
        </div>
      </div>
  </article>
<% end %>
