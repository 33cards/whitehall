<% page_title "Publications", @organisation.name %>

<%= render "beta_warning", organisation: @organisation %>
<%= organisation_wrapper(@organisation, class: "g3") do %>
  <%= render 'header', organisation: @organisation, title: "Publications" %>
  <div class="g1f">
    <%= render 'sidebar', organisation: @organisation %>
  </div>
  <% if @publications.any? %>
    <div class="g2f">
      <%= article_section("Publications", @publications, {id: 'publications'}) do |publication| %>
        <h2 class="article_title"><%= link_to publication.title, public_document_path(publication), title: "View #{publication.title}" %></h2>
        <span class="metadata">
          Updated <%= time_ago(publication.updated_at, class: 'updated_at') %>
        </span>
      <% end %>
    </div>
  <% end %>
<% end %>