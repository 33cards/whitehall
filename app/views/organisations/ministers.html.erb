<% page_title "Ministers", @organisation.name %>

<%= render "beta_warning", organisation: @organisation %>
<%= organisation_wrapper(@organisation, class: "g3") do %>
  <%= render 'header', organisation: @organisation, title: "Ministers" %>
  <div class="g1f">
    <%= render 'sidebar', organisation: @organisation %>
  </div>

  <% if @ministerial_roles.any? %>
    <div class="g2f">
      <%= article_section("Ministers", @ministerial_roles, {id: 'ministers'}) do |ministerial_role| %>
        <div class="image_holder">
          <%= image_for_ministerial_role(ministerial_role) %>
        </div>
        <h2 class="article_title current_appointee"><%= ministerial_role.current_person_name %></h2>
        <p class="role"><%= link_to ministerial_role.name, ministerial_role %></p>
      <% end %>
    </div>
  <% end %>
<% end %>