<%
  extra_class ||= ""
%>

<ul class="organisations">
  <% organisations.each do |organisation| %>
    <%= content_tag_for(:li, organisation, :class => organisation_logo_classes(organisation, class: '')) do %>
      <span class="organisation-logo-small <%= extra_class %>">
        <% if organisation.active? %>
          <%= link_to format_with_html_line_breaks(h(organisation.logo_formatted_name)), organisation_path(organisation) %>
        <% else %>
          <span><%= format_with_html_line_breaks(h(organisation.logo_formatted_name)) %></span>
        <% end %>
      </span>
    <% end %>
  <% end %>
</ul>
