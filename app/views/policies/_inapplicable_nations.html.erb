  <p id="inapplicable_nations">Only applies to <%= document.applicable_nations.map(&:name).sort.to_sentence %> 
    <% if document.nation_inapplicabilities.collect(&:alternative_url).any? %>
      (see <%= document.class.name.downcase %> for <%= list_of_links_to_inapplicable_nations(document) %>)
    <% end %>
  </p>
<% end %>
