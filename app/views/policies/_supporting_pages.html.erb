<% if document.supporting_pages.any? %>
  <section id="supporting_pages">
    <h1>Supporting pages</h1>
    <ul>
      <% document.supporting_pages.each do |supporting_page| %>
        <%= content_tag_for :li, supporting_page do %>
          <%= link_to supporting_page.title, policy_supporting_page_path(document.document, supporting_page), class: "title" %>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>
