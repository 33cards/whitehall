<ul class="policies documents-list">
  <% policies.each do |policy| %>
    <%= content_tag_for(:li, policy, class: "document") do %>
      <h2><%= link_to policy.title, public_document_path(policy), title: "View #{policy.title}", class: "title" %></h2>
      <% unless policy.summary.blank? %>
        <p class="summary"><%= policy.summary %></p>
      <% end %>
    <% end %>
  <% end %>
</ul>
