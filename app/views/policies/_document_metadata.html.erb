<div class="meta-topic">
  <%= part_of_topics_paragraph(@document.topics) %>

<% if @document.respond_to?(:countries) && @document.countries.any? %>
    <p id="document_countries">Applies to <%= list_of_links_to_countries(@document.countries) %>.</p>
<% end %>

  <% if @document.nation_inapplicabilities.any? %>
  <%= render partial: 'policies/inapplicable_nations', locals: { document: @document } %>
<% end %>
</div>

<section class="meta">
  <%= render partial: 'documents/change_notes', locals: {
    document: @document
  } %>
</section>
