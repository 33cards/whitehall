<% if recently_changed_documents.any? %>
  <section id="recently-changed" class="latest-documents">
    <h1 class="label"><%= title %></h1>
    <ol class="document-list">
      <% recently_changed_documents.each do |document| %>
        <%= content_tag_for :li, document, class: 'document-row' do %>
          <%= link_to document.title, public_document_path(document), class: "title attribute" %>
          <span class="date attribute">
            <%= published_or_updated(document).titleize %>
            <%= relative_time(document.published_at, class: 'published_at') %>
          </span>
          <span class="type attribute">
            <%= human_friendly_edition_type(document) %>
          </span>
        <% end %>
      <% end %>
    </ol>
  </section>
<% end %>
