<% page_title "Policies" %>
<% page_class "policies-index document-filter-page" %>


<header class="block heading-block">
  <div class="inner-block floated-children">
    <%= render partial: 'shared/heading',
              locals: { big: true,
                        heading: t('policies.heading') } %>
    <p class="intro-paragraph">Read biographies and responsibilities of <a href="#cabinet-ministers">Cabinet ministers</a> and all <a href="#ministers-by-department">ministers by department</a>, as well as the <a href="#whips">whips</a> who help co-ordinate parliamentary business.</p>
  </div>
</header>

<div class="block-2">
  <div class="inner-block">
    <% if Locale.current.english? %>
      <%= render partial: "documents/filter_form",
                 locals: {
                   document_type: :policy,
                   filters: [ :keyword, :department, :topic, :relevant_to_local_government ]
                 } %>
    <% else %>
      <%= render partial: "documents/filter_form", locals: { document_type: :policy } %>
    <% end %>
  </div>
</div>

<div class="block-3">
  <div class="inner-block">
    <% if Locale.current.english? %>
      <%= render partial: "documents/filter_results", locals: { filter: @filter } %>
    <% end %>

    <div class="filter-results js-filter-results" aria-live="polite">
      <%= render_mustache('documents/filter_table', @filter.as_hash) %>
    </div>
  </div>
</div>
