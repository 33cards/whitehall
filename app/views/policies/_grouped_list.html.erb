<section class="alphabetical-list" id="policies">
  <% policies.group_by {|t| t.title.first.upcase }.sort.in_groups_of(3, false) do |row| %>
    <% row.each do |letter, policies_group| %>
      <div class="alphabetical-row" id="policies_<%= letter.downcase %>">
        <h2 class="alphabetical-list-letter"><%= letter %></h2>
        <div class="inner">
          <%= render partial: "list", locals: { policies: policies_group } %>
        </div>
      </div>
    <% end %>
  <% end %>
</section>