<div class="alphabetical_list group" id="policies">
  <h1>A-Z Listing</h1>

  <% policies.group_by {|t| t.title.first.upcase }.sort.in_groups_of(3, false) do |row| %>
    <% row.each do |letter, policies_group| %>
      <div class="alphabetical_row g4" id="policies_<%= letter.downcase %>">
        <div class="g1f"><h2 class="label"><%= letter %></h2></div>
        <div class="g3f">
          <%= render partial: "list", locals: { policies: policies_group } %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>