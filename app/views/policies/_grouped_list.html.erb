<section class="alphabetical_list g4f" id="policies">
  <% policies.group_by {|t| t.title.first.upcase }.sort.in_groups_of(3, false) do |row| %>
    <% row.each do |letter, policies_group| %>
      <div class="alphabetical_row g4f" id="policies_<%= letter.downcase %>">
        <div class="g1"><h2 class="alphabetical_list_letter"><%= letter %></h2></div>
        <div class="g3f">
          <%= render partial: "list", locals: { policies: policies_group } %>
        </div>
      </div>
    <% end %>
  <% end %>
</section>