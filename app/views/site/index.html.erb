<% page_title "Latest" %>
<div class="g3f">
  <h1 class="page_title">Inside government</h1>

  <div class="g2">
    <section>
      <p>Information about all UK government organisations, including their policies, publications, speeches and the latest news.</p>

      <p>This is a beta test, and is not complete. Over time this site will replace many of the websites which are currently run by government organisations at separate web addresses.</p>
    </section>

    <% if @featured_news_articles.any? %>
      <section class="featured_carousel widescreen" id="featured-news-articles">
        <% @featured_news_articles.each do |news_article| %>
          <%= content_tag_for(:article, news_article) do %>
            <div class="img">
              <% if news_article.featuring_image.present? %>
                <%= image_tag(news_article.featuring_image_url) %>
              <% end %>
            </div>
            <h2><%= link_to news_article.title, public_document_path(news_article), class: "title" %></h2>
            <% unless news_article.summary.blank? %>
              <p class="summary"><%= news_article.summary %></p>
            <% end %>
            <div class="meta">
              <span class="published_at">Posted <%= render_datetime_microformat(news_article, :first_published_at) do %>
                  <%= time_ago_in_words(news_article.first_published_at) %> ago
                <% end %>
              </span>
              <% news_article.policy_topics.uniq.each do |pa| %>
                <%= link_to pa.name, policy_topic_path(pa), class: "policy_topic tag" %>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </section>
    <% end %>
  </div>

  <div class="g1">
    <section>
      <%= link_to image_tag('feed-icon.png'), atom_feed_path, class: 'feed_icon' %>
      <ul class='recently_updated'>
        <% @recently_updated.each do |document| %>
          <%= content_tag_for :li, document, class: document_organisation_class(document) do %>
            <div class="metadata published_or_updated">
              <%= published_or_updated(document) %>
              <%= time_ago(document.published_at, class: 'published_at') %>
            </div>
            <div><%= link_to document.title, public_document_path(document), class: "title" %></div>
            <% if organisation = document.organisations.first %>
            <%= content_tag_for :div, organisation do %>
              <%= link_to organisation.name, organisation_path(organisation) %>
            <% end %>
            <% end %>
            <div class="metadata">
              <span class="document_type"><%= human_friendly_document_type(document) %></span>
            </div>
          <% end %>
        <% end %>
      </ul>
    </section>
  </div>
</div>
