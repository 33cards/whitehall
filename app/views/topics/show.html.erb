<div class="g2">
  <section class="topic">
    <%= content_tag_for :article, @topic do %>
      <h1 class="name"><%= @topic.name %></h1>
      <p class="description"><%= @topic.description %></p>
    <% end %>
  </section>
  <% if @featured_policies.any? %>
  <section>
    <h1>Priority policies</h1>
    <ul class="featured policies">
      <% @featured_policies.each do |policy| %>
        <li>
          <%= content_tag_for :article, policy, class: "featured_policy" do %>
            <h2><%= link_to policy.title, public_document_path(policy) %></h2>
            <p>Updated <%= time_ago_in_words policy.updated_at %> ago</p>
            <% if document = policy.most_recently_updated_related_document %>
              <p><%= link_to document.title, public_document_path(document) %></p>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </section>
  <% end %>
  <%= render partial: "documents/policies", object: @policies, locals: {title: "All Policies"} %>
</div>

<div class="g1 secondary">
  <% if @recently_changed_documents.any? %>
    <section id="recently-changed">
      <h1>Recently changed</h1>
      <ul>
        <% @recently_changed_documents.each do |document| %>
          <%= content_tag_for :li, document do %>
            <%= link_to document.title, public_document_path(document), class: "title" %>
            <span class="time">(<%= distance_of_time_in_words_to_now(document.published_at) %> ago)</span>
          <% end %>
        <% end %>
      </ul>
    </section>
  <% end %>
  <%= render partial: "documents/news_articles", object: @news_articles %>
</div>
