<% page_title "Topics" %>
<% page_class "topics-index" %>


<div class="block-1">
  <div class="inner-block">
    <header class="page-header topic icon">
        <h1 class="page_title">Topics</h1>
    </header>
  </div>
</div>

<div class="block-2">
  <div class="inner-block">
    <% if @featured_topics.any? %>
      <section class="featured_items" id="featured-topics">
        <h1 class="label">Featured</h1>
        <% @featured_topics.each do |featured_topic| %>
          <div class="<%= featured_grid_class(@featured_topics.length) %>">
            <%= content_tag_for(:article, featured_topic) do %>
              <h2><%= link_to featured_topic.name, topic_path(featured_topic), class: "name" %></h2>
              <p class="summary description">
                <%= featured_topic.description %>
              </p>
            <% end %>
          </div>
        <% end %>
      </section>
    <% end %>

    <% if @topics.any? %>
      <%= render partial: "grouped_list", locals: {topics: @topics} %>
    <% else %>
      <p>We don't have any topics with published documents at present.</p>
    <% end %>

  </div>
</div>
