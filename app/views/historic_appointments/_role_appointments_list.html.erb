<div class="block historic-people-list">
  <div class="inner-block">
    <a href="#contents" class="js-showhide contents-toggle">Show past <%= role_title %></a>
    <div id="contents">
      <h3>
        <span><%= previous_appointments.size %></span>
        Past <%= role_title %>
      </h3>
      <ol>
        <% previous_appointments.uniq {|ra| ra.person}.each do |role_appointment| %>
          <li>
            <% if role_appointment.has_historical_account? %>
              <%= link_to_unless_current role_appointment.person.name, historic_appointment_path(role, role_appointment.person) %>
            <% else %>
              <%= role_appointment.person.name %>
            <% end %>
          </li>
        <% end %>
      </ol>
    </div>
  </div>
</div>
