<div class="alphabetical_list group" id="countries">
  <% countries.group_by {|c| c.name.first.upcase }.sort.in_groups_of(3, false) do |row| %>
      <% row.each do |letter, countries_group| %>
        <div class="alphabetical_row g4" id="countries_<%= letter.downcase %>">
          <div class="g1f"><h2 class="label"><%= letter %></h2></div>
          <div class="g3f">
            <%= render partial: "list", locals: { countries: countries_group } %>
          </div>
        </div>
      <% end %>
  <% end %>
</div>