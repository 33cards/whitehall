<div class="alphabetical_list g3f">
  <% countries.group_by {|c| c.name.first.upcase }.sort.in_groups_of(3, false) do |row| %>
    <div class="group alphabetical_row g3f">
      <% row.each do |letter, countries_group| %>
        <div class="alphabetical_group g1" id="countries_<%= letter.downcase %>">
          <h2 class="g3"><%= letter %></h2>
          <%= render partial: "list", locals: { countries: countries_group } %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
