<% page_title @corporate_information_page.title %>
<% page_class "corporate-information-pages-show organisation-page" %>
<%= analytics_for_organisations [@corporate_information_page.organisation] %>

<%= organisation_wrapper(@organisation) do %>
  <article>
    <div class="block-1">
      <div class="inner-block">
        <%= render partial: 'organisations/header', locals: {
              organisation: @organisation,
              link_to_organisation: true
            } %>
        <nav class="js-stick-at-top-when-scrolling">
          <h1>Contents</h1>
          <ol>
            <% govspeak_headers(@corporate_information_page.body).each do |header| %>
              <li><%= link_to header.text, "##{header.id}" %></li>
            <% end %>
          </ol>
        </nav>
      </div>
    </div>
    <div class="block-2">
      <div class="inner-block">
        <h1 class="main"><%= @corporate_information_page.title %></h1>
        <p class="description">
          <%= @corporate_information_page.summary %>
        </p>
        <div class="body">
          <%= govspeak_edition_to_html @corporate_information_page %>
        </div>
      </div>
    </div>
  </article>
<% end %>
