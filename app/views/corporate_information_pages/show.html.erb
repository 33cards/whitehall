<% page_title @corporate_information_page.title %>

<div class="corporate-information-page <%= @corporate_information_page.slug %>">
  <div class="block-1">
    <div class="inner-block">
      <section class="page-header icon">
        <h1 class="page_title">
          <span class="title"><%= @corporate_information_page.title %></span>
        </h1>
      </section>
    </div>
  </div>

    <div class="block-2">
      <div class="inner-block">
        <section id="document-organisations" class="heading-block">
          <h1>Published by</h1>
          <div class="content">
            <%= render  partial: 'organisations/organisations_logo_list',
                        locals: {
                          organisations: [@corporate_information_page.organisation],
                          extra_class: 'single-line',
                          remove_line_breaks: true
                        } %>
          </div>
        </section>
        <section id="details" class="heading-block">
          <h1>Detail</h1>
          <div class="content">
            <article>
              <div class="body">
                <%= govspeak_edition_to_html @corporate_information_page %>
              </div>
            </article>
          </div>
        </section>
    </div>
  </div>
</div>
