<% page_title @document_series.name, @organisation.name %>
<% page_class "document-series" %>

<div class="block-1">
  <div class="inner-block">
    <header class="page-header">
      <h1><%= @document_series.name %></h1>
      <p>A document series from <%= link_to @organisation.name, organisation_path(@organisation) %>.</p>
    </header>
  </div>
</div>

<div class="block-2">
  <div class="inner-block">
    <section id="document_series" class="group">
      <% if @document_series.published_editions.any? %>
        <ul>
          <% @document_series.published_editions.each do |edition| %>
            <%= content_tag_for :li, edition do %>
              <%= link_to edition.title, public_document_path(edition) %>
            <% end %>
          <% end %>
        </ul>
      <% else %>
        <p>There are no documents in this series at the moment.</p>
      <% end %>
    </section>
  </div>
</div>
