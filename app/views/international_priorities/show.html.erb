<% page_title @document.title, "International Priorities" %>

<div class="g3f">
  <section class="page_header countries">
    <h1 class="page_title title has_meta"><%= @document.title %></h1>
    <div class="meta">
      <span class="metadata">Last updated <%= time_ago(@document.published_at, class: 'published_at') %></span>
      <% @document.organisations.each do |organisation| %>
        <%= link_to organisation_display_name(organisation), organisation_path(organisation), class: "organisation tag", id: dom_id(organisation) %>
      <% end %>
      <div id="document_countries">
        <% @document.countries.each do |country| %>
          <%= link_to country.name, country_path(country), class: "country tag", id: dom_id(country) %>
        <% end %>        
      </div>
    </div>
  </section>
</div>

<div class="g3f document_page">
  <div class="g2 document_view">
    <article class="document">
      <div class="body">
        <%= govspeak_to_html @document.body, @document.images %>
      </div>
    </article>
  </div>
</div>
