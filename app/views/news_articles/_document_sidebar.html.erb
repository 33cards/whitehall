<aside class="lead-image-sidebar sidebar">
  <figure class="image embedded">
    <div class="img"><%= image_tag document.lead_image.url, alt: document.lead_image.alt_text %></div>
    <% if document.lead_image.caption.present? %>
      <figcaption><%= document.lead_image.caption %></figcaption>
    <% end %>
  </figure>
</aside>
