<div class="g3">
  <h1 class="page_title title has_meta"><%= @document.title %></h1>
  <p class="meta">
    <span class="metadata">Last updated
    <%= render_datetime_microformat(@document, :published_at) do %>
      <%= time_ago_in_words(@document.published_at) %> ago
    <% end %></span>
    <% @related_policies.map { |d| d.policy_areas }.flatten.uniq.each do |policy_area| %>
      <%= link_to policy_area.name, policy_area_path(policy_area), class: "policy_area", id: dom_id(policy_area) %>
    <% end %>
    <% @document.organisations.each do |organisation| %>
      <%= link_to organisation.name, organisation_path(organisation), class: "organisation" %>
    <% end %>
    <% @document.ministerial_roles.each do |ministerial_role| %>
      <%= link_to ministerial_role.current_person_name, ministerial_role, class: "minister" %>
    <% end %>
    <% @document.countries.each do |country| %>
      <%= link_to country.name, country_path(country), class: "country", id: dom_id(country) %>
    <% end %>
  </p>
</div>

<div class="g3f document_page">
  <div class="g2 document_view">
    <article class="document">
      <div class="body">
        <%= govspeak_to_html @document.body %>
      </div>
      <% if @document.notes_to_editors.present? %>
        <section id="notes_to_editors">
          <h1>Notes to editors</h1>
          <div class="notes_to_editors">
            <%= govspeak_to_html @document.notes_to_editors %>
          </div>
        </section>
      <% end %>
    </article>
  </div>
</div>

<%= render partial: 'related_policies', object: @related_policies %>
