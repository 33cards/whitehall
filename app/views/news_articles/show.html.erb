<div class="g2">
  <%= render partial: 'document', locals: { document: @document } %>
</div>

<div class="g1 secondary">
  <%= render partial: 'topics', locals: { document: @document } %>
  <%= render partial: 'organisations', locals: { document: @document } %>
  <%= render partial: 'ministerial_roles', locals: { document: @document } %>
  <%= render partial: 'countries', locals: { document: @document } %>

  <% if @related_policies.any? %>
    <section id="related-policies">
      <h1>Related policies</h1>
      <ul>
        <% @related_policies.each do |policy| %>
          <%= content_tag_for :li, policy do %>
            <%= link_to policy.title, public_document_path(policy) %>
          <% end %>
        <% end %>
      </ul>
    </section>
  <% end %>
</div>