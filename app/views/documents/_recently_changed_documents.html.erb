<% if recently_changed_documents.any? %>
  <section id="recently-changed">
    <h1>Recently changed</h1>
    <ul>
      <% recently_changed_documents.each do |document| %>
        <%= content_tag_for :li, document do %>
          <%= link_to document.title, public_document_path(document), class: "title" %>
          <p class="metadata">
            <span class="document_type"><%= main_document_type(document) %></span>
            published
            <%= render_datetime_microformat(document, :published_at) do %>
              <%= time_ago_in_words(document.published_at) %>
            <% end %> ago
          </p>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>