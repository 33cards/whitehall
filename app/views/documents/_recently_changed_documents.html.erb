<% if recently_changed_documents.any? %>
  <section id="recently-changed">
    <h1><%= title %></h1>
    <ul>
      <% recently_changed_documents.each do |document| %>
        <%= content_tag_for :li, document do %>
          <div><%= link_to document.title, public_document_path(document), class: "title" %></div>
          <div class="metadata">
            <span class="document_type"><%= human_friendly_document_type(document) %></span>
            <%= published_or_updated(document) %> <%= time_ago(document.published_at, class: 'published_at') %>
          </div>
        <% end %>
      <% end %>
    </ul>
  </section>
<% end %>