<div class="g2 first">
  <section class="document_view">
    <h1 class="title"><%= @published_edition.title %></h1>
    <div class="body">
      <%= govspeak_to_html @published_edition.body %>
    </div>
    <p class="attachment"><%= link_to_attachment(@published_edition.attachment) %></p>
  </section>
</div>

<% if @published_edition.topics.any? %>
  <section id="topics" class="g1">
    <h1>Topics</h1>
    <ul class="topics">
    <% @published_edition.topics.each do |topic| %>
      <%= content_tag_for :li, topic do %>
        <%= link_to topic.name, topic_path(topic) %>
      <% end %>
    <% end %>
    </ul>
  </section>
<% end %>

<% if @published_edition.organisations.any? %>
  <section id="organisations" class="g1">
    <h1>Organisations</h1>
    <ul class="organisations">
    <% @published_edition.organisations.each do |organisation| %>
      <%= content_tag_for :li, organisation do %>
        <%= link_to organisation.name, organisation_path(organisation) %>
      <% end %>
    <% end %>
    </ul>
  </section>
<% end %>

<% if @published_edition.roles.any? %>
  <section id="ministers_responsible" class="g1">
    <h1>Ministers</h1>
    <ul class="ministers">
    <% @published_edition.roles.each do |role| %>
      <%= content_tag_for :li, role do %>
        <%= role.name %>
      <% end %>
    <% end %>
    </ul>
  </section>
<% end %>