<div class="g2 first">
  <section class="document_view">
    <h1 class="title"><%= @document.title %></h1>
    <div class="body">
      <%= govspeak_to_html @document.body %>
    </div>
    <p class="attachment"><%= link_to_attachment(@document.attachment) %></p>
  </section>
</div>

<% if @document.topics.any? %>
  <section id="topics" class="g1">
    <h1>Topics</h1>
    <ul class="topics">
    <% @document.topics.each do |topic| %>
      <%= content_tag_for :li, topic do %>
        <%= link_to topic.name, topic_path(topic) %>
      <% end %>
    <% end %>
    </ul>
  </section>
<% end %>

<% if @document.organisations.any? %>
  <section id="organisations" class="g1">
    <h1>Organisations</h1>
    <ul class="organisations">
    <% @document.organisations.each do |organisation| %>
      <%= content_tag_for :li, organisation do %>
        <%= link_to organisation.name, organisation_path(organisation) %>
      <% end %>
    <% end %>
    </ul>
  </section>
<% end %>

<% if @document.roles.any? %>
<section id="ministers_responsible">
  <h1>Ministers</h1>
  <ul class="ministers">
    <% @document.roles.each do |role| %>
      <%= content_tag_for(:li, role) do %>
        <p class="title"><%= role.name %></p>
        <% if role.person %>
          <p class="name"><%= role.person.name %></p>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</section>
<% end %>