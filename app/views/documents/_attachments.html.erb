<% document.attachments.each do |attachment| %>
  <%= content_tag_for(:p, attachment, class: css_class_for_attachment(attachment)) do %>
    <% if attachment.pdf? %>
      <%= link_to(image_tag(attachment.url(:thumbnail)), attachment.url) %>
    <% end %>

    <%= link_to_attachment(attachment) %>
    <span class="type"><%= humanized_content_type(attachment.content_type) %></span>
    <% if attachment.number_of_pages.present? %>
      <span class="number_of_pages"><%= pluralize(attachment.number_of_pages, "page") %></span>
    <% end %>
    <span class="size"><%= number_to_human_size(attachment.file_size) %></span>
  <% end %>
<% end %>
