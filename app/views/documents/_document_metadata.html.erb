<section class="meta">
  <%= announcement_metadata(@document) %>

  <div class="change_notes_container">
    <p class="link-to-change-notes">Change notes</p>

    <section class="change_notes">
      <h1>Change notes</h1>
      <ul>
        <% change_history(@document).each do |edition| %>
          <li class="group">
            <p><%= edition[:change_note] %></p>
            <%= time_ago(edition[:published_at], class: 'published_at') %>
          </li>
        <% end %>
      </ul>
    </section>
  </div>
</section>
