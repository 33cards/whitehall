<% if document.nation_inapplicabilities.any? %>
  <section id="inapplicable_nations" class="inapplicable_nations">
    <p>This <%= document.format_name %> does not apply to <%= document.inapplicable_nations.map(&:name).sort.to_sentence %>.</p>
    <% if document.nation_inapplicabilities.collect(&:alternative_url).any? %>
      <ul class="nation_inapplicabilities">
        <% document.nation_inapplicabilities.each do |nation_inapplicability| %>
          <% if nation_inapplicability.alternative_url.present? %>
            <%= content_tag_for(:li, nation_inapplicability) do %>
              Information about
              <%= link_to "#{document.title} #{document.format_name} in #{nation_inapplicability.nation.name}", nation_inapplicability.alternative_url %>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </section>
<% end %>
