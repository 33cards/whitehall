<% hide_image ||= false %>
<li class="<%= person_class %>">
  <div class="inner">
    <% unless hide_image %>
      <div class="image_holder">
        <%= link_to person.image, person %>
      </div>
    <% end %>
    <<%= hlevel %> class="current-appointee"><%= person.link %></<%= hlevel %>>
    <p class="role">
      <%= roles.map { |role| role.link }.join(", ").html_safe %>
    </p>
  </div>
</li>
