<% page_title @document.title, "Publications" %>

<div class="document-page <%= @document.type.downcase %>">
  <div class="block-1">
    <div class="inner-block">
      <%= render  partial: 'header',
                  locals: {
                    header_title: @document.publication_type.singular_name,
                    document: @document,
                    policies: @related_policies
                  } %>
    </div>
  </div>
  <div class="block-2">
    <div class="inner-block">
      <%= render partial: "documents/attachment_full_width",
                locals: { document: @document } %>
      <% if @document.part_of_series? %>
        <p class="document-series">
          <span>This publication is part of a series:</span> <%= link_to @document.document_series.name, organisation_document_series_path(@document.document_series.organisation, @document.document_series) %>
        </p>
      <% end %>
    </div>
  </div>

    <div class="block-3">
      <div class="inner-block">
        <section id="details" class="heading-block">
          <h1>Detail</h1>
          <div class="content">
            <article>
              <div class="body">
                <%= govspeak_edition_to_html @document %>
              </div>
            </article>
          </div>
        </section>
    </div>
  </div>
</div>
