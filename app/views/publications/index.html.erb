<div class="g3">
  <section id="publications">
    <h1>Publications</h1>
    <% if @publications.any? %>
      <ul class="publications">
        <% @publications.each_with_index do |publication, index| %>
          <%= content_tag_for(:li, publication) do %>
            <img class="cover" src="/images/pub-cover.png" />
            <h2 class="title"><%= link_to truncate(publication.title, { length: 40 }), public_document_path(publication), title: "View #{publication.title}" %></h2>
            <p class="body"><%= truncate(publication.body, { length: 100 }) %></p>
            <% if index.zero? %>
            <%= link_to "Read Publication", public_document_path(publication), title: "View #{publication.title}", class: "button" %>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    <% else %>
      <p>We don't have any published publications at present.</p>
    <% end %>
  </section>
</div>