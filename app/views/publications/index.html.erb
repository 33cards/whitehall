<div class="g3">
  <section id="publications">
    <h1>Publications</h1>
    <% if @publications.any? %>
      <ul class="publications">
        <% @publications.each do |publication| %>
          <%= content_tag_for(:li, publication) do %>
            <%= link_to public_document_path(publication), title: "View #{publication.title}" do %>
              <span class="title"><%= publication.title %></span>
              <span class="body"><%= truncate(publication.body, { length: 100 }) %></span>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    <% else %>
      <p>We don't have any published publications at present.</p>
    <% end %>
  </section>
</div>