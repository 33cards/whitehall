<% page_title "Publications" %>

<div class="g3f">
  <section class="page_header publication">
    <h1 class="page_title">Publications</h1>
  </section>
</div>

<div class="g3">
  <section id="publication_index">
    <% if @publications.any? %>
      <% featured_publications, other_publications = @publications.partition(&:featured?) %>
      <% if featured_publications.any? %>
        <section id="featured-publications">
          <ul class="publications">
            <%= render featured_publications %>
          </ul>
        </section>
      <% end %>
      <% if other_publications.any? %>
        <ul class="publications">
          <%= render other_publications %>
        </ul>
      <% end %>
    <% else %>
      <div class="g3"><p>We don't have any published publications at present.</p></div>
    <% end %>
  </section>
</div>