<div class="img">
  <%= link_to image_tag(publication.has_thumbnail? ? publication.thumbnail_url : 'pub-cover.png'), public_document_path(publication) %>
</div>
<h2 class="article_title"><%= link_to publication.title, public_document_path(publication), title: "View #{publication.title}" %></h2>
<% if publication.summary.present? %><p class="summary"><%= publication_summary(publication) %></p><% end %>
<span class="metadata">
  Published on <%= render_datetime_microformat(publication, :publication_date) {
                     publication.publication_date.to_s(:long_ordinal)
                   }%>
</span>
